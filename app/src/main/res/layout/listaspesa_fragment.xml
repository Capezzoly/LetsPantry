<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fragmentListaSpesa"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="LONGPRESS ON ELEMENT TO EDIT"
        android:textColor="@color/colorText1"
        android:id="@+id/longpress"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewListaSpesa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimMargin"
        android:clipToPadding="false"
        android:paddingBottom="64dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/longpress" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="@drawable/fab_back"
        android:text="@string/add"
        android:textSize="@dimen/dimText"
        android:layout_margin="@dimen/dimMargin"
        android:padding="@dimen/dimMargin"
        android:textColor="@color/colorText2"
        android:id="@+id/btnAggiungi"
        />

</androidx.constraintlayout.widget.ConstraintLayout>