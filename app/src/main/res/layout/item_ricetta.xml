<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimMargin"
    android:padding="@dimen/dimMargin"
    android:background="@drawable/rettangolo_back_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimMargin"
        android:textSize="@dimen/dimText"
        android:textColor="@color/colorText1"
        android:gravity="start"
        app:layout_constraintRight_toLeftOf="@id/lineaVerticale"
        android:text="Nome Ricetta"
        android:id="@+id/nomeRicetta"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dimMargin"
        android:textColor="@color/colorPrimary"
        android:text="Primo Piatto"
        android:textSize="@dimen/dimTextLittle"
        android:id="@+id/tipoPiatto"
        />
    <View
        android:layout_width="1dp"
        android:id="@+id/lineaVerticale"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimMargin"
        app:layout_constraintRight_toLeftOf="@id/tipoPiatto"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>