<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="700dp"
    android:background="@color/colorBackgroundGrey">

    <TextView
        android:id="@+id/nomeRicetta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMargin"
        android:gravity="center"
        android:text="Nome ricetta"
        android:textColor="@color/colorText1"
        android:textSize="@dimen/dimTextBig" />
    <TextView
        android:id="@+id/nomeIngredientePrincipale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMargin"
        android:gravity="center"
        android:text="Ingrediente Principale"
        android:textColor="@color/colorText1"
        android:textSize="@dimen/dimText" />
    <TextView
        android:id="@+id/numeroPersone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimMargin"
        android:gravity="center"
        android:text="per 6 persone"
        android:textColor="@color/colorText1"
        android:textSize="@dimen/dimTextLittle" />
    <TextView
        android:id="@+id/listaIngredienti"
        android:scrollbars = "vertical"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_margin="@dimen/dimMargin"
        android:gravity="start"
        android:text="Ingredienti:"
        android:textColor="@color/colorText1"
        android:textSize="@dimen/dimTextLittle" />

    <TextView
        android:id="@+id/procedimento"
        android:scrollbars = "vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="@dimen/dimMargin"
        android:gravity="start"
        android:paddingBottom="@dimen/dimMargin"
        android:text="Procedimento:"
        android:textColor="@color/colorText1"
        android:textSize="@dimen/dimTextLittle" />
</LinearLayout>