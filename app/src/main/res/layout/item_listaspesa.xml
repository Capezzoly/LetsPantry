<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rettangolo_back_green"
    android:layout_marginTop="@dimen/dimMargin"
    android:id="@+id/elementoView"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimMargin"
        android:padding="@dimen/dimMargin"
        android:text="X"
        android:textSize="@dimen/dimText"
        android:id="@+id/listCheck"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lineaVerticale"
        app:layout_constraintLeft_toRightOf="@id/listCheck"
        android:layout_margin="@dimen/dimMargin"
        android:textSize="@dimen/dimText"
        android:hint="INGREDIENTE"
        android:id="@+id/listItem"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dimMargin"
        android:textSize="@dimen/dimText"
        android:id="@+id/listQuantita"
        android:hint="20.0"
        />
    <View
        android:layout_width="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimMargin"
        app:layout_constraintRight_toLeftOf="@id/listQuantita"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/lineaVerticale"
        android:layout_height="35dp"
        android:background="@color/colorText2" />

</androidx.constraintlayout.widget.ConstraintLayout>